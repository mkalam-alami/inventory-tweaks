<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>net.jimeowan</groupId>
    <artifactId>inventory-tweaks</artifactId>
    <version>1.42-1.3.1</version>
    <packaging>jar</packaging>
    <name>Inventory Tweaks</name>

    <properties>
        <archive.name>InvTweaks-${project.version}</archive.name>
    </properties>

    <build>
        <finalName>${archive.name}</finalName>

        <!-- Custom project layout -->
        <sourceDirectory>src</sourceDirectory>
        <resources>
            <resource>
                <targetPath>.</targetPath>
                <filtering>false</filtering>
                <directory>src</directory>
                <includes>
                    <include>doc/*</include>
                    <include>invtweaks/lang/*</include>
                    <include>*.dat</include>
                </includes>
                <excludes>
                    <exclude>*.java</exclude>
                </excludes>
            </resource>
        </resources>

        <plugins>
            <!-- Compiling settings -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.6</version>
                <executions>
                    <!-- Package renaming -->
                    <execution>
                        <id>move</id>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <zip basedir="target/classes" destfile="target/${archive.name}.zip" />
                            </target>
                        </configuration>
                    </execution>
                    <!-- Deploy to Minecraft install -->
                    <execution>
                        <id>deploy</id>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <phase>install</phase>
                        <configuration>
                            <target>
                                <ant antfile="${basedir}/build.xml">
                                  <property name="version" value="${project.version}"/>
                                  <target name="dist" />
                                  <target name="launcher" />
                                </ant>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <!-- Define Minecraft location according to OS -->
        <profile>
            <id>minecraft-path-windows</id>
            <activation>
                <os>
                    <family>windows</family>
                </os>
            </activation>
            <properties>
                <minecraft.path>${user.home}/AppData/Roaming/.minecraft/</minecraft.path>
                <minecraft.bin.path>${minecraft.path}bin/</minecraft.bin.path>
            </properties>
        </profile>
        <profile>
            <id>minecraft-path-linux</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            <properties>
                <minecraft.path>${user.home}/.minecraft/</minecraft.path>
                <minecraft.bin.path>${minecraft.path}bin/</minecraft.bin.path>
            </properties>
        </profile>
		<profile>
			<id>minecraft-path-mac</id>
			<activation>
				<os>
					<family>unix</family>
					<name>mac os x</name>
				</os>
			</activation>
			<properties>
				<minecraft.path>${user.home}/Library/Application Support/minecraft/</minecraft.path>
				<minecraft.bin.path>${minecraft.path}bin/</minecraft.bin.path>
			</properties>
		</profile>
	</profiles>

    <dependencies>
        <dependency>
            <groupId>net.minecraft</groupId>
            <artifactId>minecraft</artifactId>
            <version>any</version>
            <scope>system</scope>
            <systemPath>${minecraft.bin.path}minecraft.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>net.minecraft</groupId>
            <artifactId>lwjgl</artifactId>
            <version>1.8</version>
            <scope>system</scope>
            <systemPath>${minecraft.bin.path}lwjgl.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>net.minecraft</groupId>
            <artifactId>lwjgl_util</artifactId>
            <version>1.8</version>
            <scope>system</scope>
            <systemPath>${minecraft.bin.path}lwjgl_util.jar</systemPath>
        </dependency>
    </dependencies>

</project>
